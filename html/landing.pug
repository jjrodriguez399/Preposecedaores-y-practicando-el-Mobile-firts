-var titulos = ['TITULO PRINCIPAL','SUBTITULO1','SUBTITULO2','SUBTITULO3']
-var usuario = 'Jose'
-var enlaces = ['ACERCA','NOTICIAS','CONTACTO']
mixin caja(imagen,titulo,contenido) 
    section.container 
        .main__container-img
            img(src="../img/"+imagen) 
        .main__container-text 
            h2=titulo 
            p=contenido 



doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Empezando con pug 
        link(rel="stylesheet", href="../css/pug.css")
    body 
    header 
        h1 PLATZIGAMES
        if usuario
         a(href="") Hola #{usuario}
        else  
         a( href="") REGISTRO
